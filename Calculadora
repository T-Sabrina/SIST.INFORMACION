    //Botón de suma
    private void jButton14ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.primernumero=Float.parseFloat(this.casilla.getText());
        this.operador="+";
        this.casilla.setText("");
    }                                         
    //Casos que se realizaran de acuerdo a la operación asignada al presionar el botón "="
    private void jButton15ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.segundonumero=Float.parseFloat(this.casilla.getText());
        switch(this.operador){
            case"+":this.casilla.setText(sincero(this.primernumero+this.segundonumero));
                break;
            case"-":this.casilla.setText(sincero(this.primernumero-this.segundonumero));
                break;
            case"*":this.casilla.setText(sincero(this.primernumero*this.segundonumero));
                break;
            case"/":this.casilla.setText(sincero(this.primernumero/this.segundonumero));
                break;
            
        }
    }                                         
    //Botón de resta
    private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {                                          
         this.primernumero=Float.parseFloat(this.casilla.getText());
        this.operador="-";
        this.casilla.setText("");
    }                                         
    //Botón de punto para números decimales
    private void jButton17ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(!(this.casilla.getText().contains("."))){ //Si el número ingresado no contiene punto
            this.casilla.setText(this.casilla.getText()+".");
        }
    }                                         
    public String sincero(float resultado){ //Función para que el resultado no aparezca con .0 al final
        String retorno="";
        retorno=Float.toString(resultado);
        if(resultado%1==0){
            retorno=retorno.substring(0,retorno.length()-2);
        }
        return retorno;
    }
            
